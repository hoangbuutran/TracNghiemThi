@model Model.EF.TAILIEU

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<br/>
<h2>Sửa Thông Tin Tài Liệu</h2>
<script src="~/Assets/ckeditor/ckeditor.js"></script>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Bài @Model.TENBAI</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IDTAILIEU)

        <div class="form-group">
            @Html.LabelFor(model => model.TENBAI, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.TENBAI, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TENBAI, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NOIDUNG, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-8">
                @Html.TextAreaFor(model => model.NOIDUNG, new { @id = "FullDescription", @class = "form-control", @rows = "50" })
                <script>
                    CKEDITOR.replace("FullDescription");
                </script>
                @*@Html.EditorFor(model => model.NOIDUNG, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.ValidationMessageFor(model => model.NOIDUNG, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-5 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<hr />
<div>
    <button class="button">
        @Html.ActionLink("Back to List", "Index")
    </button>

</div>

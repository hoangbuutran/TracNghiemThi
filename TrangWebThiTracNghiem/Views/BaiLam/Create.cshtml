@using Model.EF
@using TrangWebThiTracNghiem.Common
@model Model.EF.BAILAM

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutSecond.cshtml";
    var session = (NguoiDungLogin)Session[CommonConstant.USER_SESSION];
    var dethi = (DETHI)ViewBag.dethi;
}

<h2>Tạo mới bài làm</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Tạo mới bài làm trước khi vào thi để lưu lại kết quả thi.</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.IDDETHI, "IDDETHI", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-8">
                @Html.DropDownList("IDDETHI", new List<SelectListItem> { new SelectListItem { Text = @dethi.TENDETHI, Value = @dethi.IDDETHI.ToString() } }, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IDDETHI, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IDNGUOIDUNG, "IDNGUOIDUNG", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-8">
                @Html.DropDownList("IDNGUOIDUNG", new List<SelectListItem> { new SelectListItem { Text = @session.tendangnhap, Value = @session.idnguoidung.ToString() } }, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IDNGUOIDUNG, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Bắt Đầu Thi" class="btn btn-default" />
            </div>
        </div>
    </div>
}

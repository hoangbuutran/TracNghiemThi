@model IEnumerable<Model.EF.NGUOIDUNG>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Quản lý người dùng</h2>
<hr />
<p>
    <button class="button">
        @Html.ActionLink("Thêm mới người dùng", "Create")
    </button>

</p>

<div class="row">
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách người dùng
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.LOAINGUOIDUNG.TENLOAINGUOIDUNG)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TENNGUOIDUNG)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.EMAIL)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DOTINCAY)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TRANGTHAI)
                                </th>
                                <th>Tùy Chọn</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LOAINGUOIDUNG.TENLOAINGUOIDUNG)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TENNGUOIDUNG)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EMAIL)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DOTINCAY)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TRANGTHAI)
                                    </td>
                                    <td>
                                        <button class="button">
                                            @Html.ActionLink("Phân Quyền", "Edit", new { id = item.IDNGUOIDUNG })
                                        </button>
                                        |
                                        <button class="button">
                                            @Html.ActionLink("Chi tiết", "Details", new { id = item.IDNGUOIDUNG })
                                        </button>
                                        |
                                        <button class="button">
                                            @Html.ActionLink("Xóa", "Delete", new { id = item.IDNGUOIDUNG })
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>

</div>


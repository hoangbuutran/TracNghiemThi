@model Model.EF.LIENHE

@{
    ViewBag.Title = "ThayDoiTrangThai";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<br/>
<h2>Thay đổi trạng thái đã đọc</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Thông Báo ngày: @Model.NGAYGUIYKIEN</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IDLIENHE)
        
        <div class="form-group">
            @Html.LabelFor(model => model.TRANGTHAI, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-8">
                <div class="checkbox">
                    @Html.EditorFor(model => model.TRANGTHAI)
                    @Html.ValidationMessageFor(model => model.TRANGTHAI, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <hr/>
        <div class="form-group">
            <div class="col-md-offset-3 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<hr/>
<div>
    <button class="button">
        @Html.ActionLink("Back to List", "Index")
    </button>
</div>

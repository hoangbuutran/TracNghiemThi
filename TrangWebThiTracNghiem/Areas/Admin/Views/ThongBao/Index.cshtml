@model IEnumerable<Model.EF.THONGBAO>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<br />
<h2>Quản lý thông báo</h2>
<br />
<p>
    <button type="button">
        @Html.ActionLink("Tạo mới thông báo", "Create")
    </button>
</p>
<br />
<!-- /.row -->
<div class="row">
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách thông báo
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.TENTHONGBAO)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.NOIDUNGTHONGBAO)
                                </th>

                                <th>Tùy Chọn</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TENTHONGBAO)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NOIDUNGTHONGBAO)
                                    </td>
                                    <td>
                                        <button type="button">
                                            @Html.ActionLink("Edit", "Edit", new { id = item.IDTHONGBAO })
                                        </button>  |
                                        <button type="button">
                                            @Html.ActionLink("Details", "Details", new { id = item.IDTHONGBAO })
                                        </button>  |
                                        <button type="button">
                                            @Html.ActionLink("Delete", "Delete", new { id = item.IDTHONGBAO })
                                        </button>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>

</div>
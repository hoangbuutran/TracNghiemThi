@model TrangWebThiTracNghiem.Models.LoginClientModel


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="login-panel panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Please Sign In</h3>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Index", "NguoiDungClient", FormMethod.Post))
                {
                    @Html.ValidationSummary(false, "", "error");
                    <fieldset>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.tenDangNhap, new { @class = "form-control", @autofocus = "autofocus" })

                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(model => model.matKhau, new { @class = "form-control" })

                        </div>
                        <div class="checkbox">
                            <label>
                                @Html.CheckBoxFor(model => model.nhoMatKhau)Remember Me

                            </label>
                        </div>
                        <!-- Change this to a button or input when using this as a form -->
                        <button type="submit" class="btn btn-lg btn-success btn-block">Login</button>
                    </fieldset>
                }

                <div class="row">

                    <div class="col-md-6">
                        <div class="fg-button" id="quenmatkhau">
                            <a href="/NguoiDungClient/Creates">Đăng ký tài khoản</a>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="fg-button" id="quenmatkhau">
                            <a href="">Quên mật khẩu ?</a>
                        </div>
                    </div>
                </div>



            </div>
        </div>
    </div>
</div>


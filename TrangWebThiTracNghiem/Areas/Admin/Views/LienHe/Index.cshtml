@model IEnumerable<Model.EF.LIENHE>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<br />
<h2>Quản lý liên hệ</h2>
<hr />
<br />

<!-- /.row -->
<div class="row">
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách Liên hệ
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.NOIDUNG)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.EMAIL)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.NGAYGUIYKIEN)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TRANGTHAI)
                                </th>

                                <th>Tùy Chọn</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NOIDUNG)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EMAIL)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NGAYGUIYKIEN)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TRANGTHAI)
                                    </td>
                                    <td>
                                        <button class="button">
                                            @Html.ActionLink("Thay đổi trạng thái", "ThayDoiTrangThai", new { id = item.IDLIENHE })
                                        </button>
                                        |
                                        <button class="button">
                                            @Html.ActionLink("Xem chi tiết", "Details", new { id = item.IDLIENHE })
                                        </button>
                                        |
                                        <button class="button">
                                            @Html.ActionLink("Xóa", "Delete", new { id = item.IDLIENHE })
                                        </button>
                                        |
                                        <button class="button">
                                            @Html.ActionLink("Phản Hồi", "Delete", new { id = item.IDLIENHE })
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
</div>
